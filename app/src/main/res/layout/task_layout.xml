<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        android:id="@+id/cardItem"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tranparent"
            android:orientation="horizontal">
            <View
                android:id="@+id/view_color_type"
                android:background="#000"
                android:layout_width="3dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/checkCheck"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    app:color_checked="@android:color/transparent"
                    app:color_tick="@color/todayText"
                    app:color_unchecked_stroke="@color/co"
                    app:small_tick="false"></net.igenius.customcheckbox.CustomCheckBox>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/BackgroundTimetable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|fill_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/TitleTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Timetable"
                        android:textColor="@color/co"
                        android:textSize="10pt"></TextView>

                    <TextView
                        android:id="@+id/SubTitleTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:text="Sub title..."
                        android:textColor="@color/lowco"
                        android:textSize="7pt"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/DateTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="3dp"
                            android:fontFamily="@font/ubuntu_light"
                            android:gravity="center_vertical"
                            android:text="26/12/2020"
                            android:textColor="@color/lowco"
                            android:textSize="7pt"></TextView>

                        <TextView
                            android:id="@+id/TimeTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/ubuntu_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="00:00"
                            android:textColor="@color/lowco"
                            android:textSize="7pt"></TextView>

                        <TextView
                            android:id="@+id/LocationTextview"
                            android:layout_width="match_parent"
                            android:paddingLeft="20dp"
                            android:fontFamily="@font/ubuntu_light"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_white"
                            android:drawablePadding="3dp"
                            android:gravity="center_vertical"
                            android:text="Room E1.204"
                            android:textColor="@color/lowco"
                            android:textSize="7pt"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
